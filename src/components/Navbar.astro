---
import GitHub from "../../public/icons/github.svg";
import LinkedIn from "../../public/icons/linkedin.svg";

const links = [
  {
    icon: GitHub,
    href: "https://github.com/esadek",
    text: "GitHub",
  },
  {
    icon: LinkedIn,
    href: "https://www.linkedin.com/in/emil-sadek",
    text: "LinkedIn",
  },
];
---

<div class="flex flex-col items-center justify-between py-8 sm:flex-row">
  <a href="/" class="mb-2 text-xl sm:mb-0">Emil Sadek</a>
  <div class="flex gap-4">
    {
      links.map((link) => (
        <a href={link.href} class="flex items-center">
          <link.icon />
          &nbsp;{link.text}
        </a>
      ))
    }
  </div>
</div>
